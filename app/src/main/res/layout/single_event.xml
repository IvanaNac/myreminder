<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/single_event_id"

    android:weightSum="1"
    android:background="@drawable/back3">


    <TextView
        android:layout_width="332dp"
        android:layout_height="80dp"
        android:id="@+id/nameOut"
        android:layout_alignParentTop="true"
        android:textColor="#459D88"
        android:textSize="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="321dp"
        android:layout_height="30dp"
        android:id="@+id/timeOut"
        android:gravity="center"
        android:layout_above="@+id/detailsOut"
        android:layout_alignRight="@+id/nameOut"
        android:layout_alignEnd="@+id/nameOut"
        android:textColor="#459D88"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:id="@+id/detailsOut"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/timeOut"
        android:layout_alignEnd="@+id/timeOut"
        android:textColor="#4B4848"
        android:gravity="center"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/edit"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/nameOut"
        android:textSize="48dp"
        android:onClick="editEvent" />

    <ImageView
        android:layout_width="326dp"
        android:layout_height="300dp"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/timeOut"
        android:layout_below="@+id/nameOut" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit"
        android:layout_toStartOf="@+id/timeOut"
        android:onClick="deleteEvent"
        android:layout_toLeftOf="@+id/timeOut" />

</RelativeLayout>